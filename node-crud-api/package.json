    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "nodemon": "3.1.4",
    "prettier": "3.3.3",
    "rimraf": "6.0.1",
    "supertest": "7.0.0",
    "tsx": "4.19.0",
    "typescript": "5.5.4",
    "typescript-eslint": "8.4.0",
    "vitest": "2.1.1"
